    <div class="foot foot2" @style="'background-color: ' + $manecss +';'"></div>
    <div class="foot foot3" @style="'background-color: ' + $manecss +';'"></div>
    <div class="foot foot4" @style="'background-color: ' + $manecss +';'"></div>
    <div class="mane2" @style="'background-color: ' + $manecss +';'"></div>
