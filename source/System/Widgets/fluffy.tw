    <div class="smile"></div>
    <div class="belly"></div>
    <div class="pupil1" @style="'background-color: ' + $manecss +';'"></div>
    <div class="pupil2" @style="'background-color: ' + $manecss +';'"></div>
    <div class="eye1"></div>
    <div class="eye2"></div>
